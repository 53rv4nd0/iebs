{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ventas",
						"type": "DatasetReference"
					},
					"name": "ventas"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					},
					"name": "resultadoVentas"
				}
			],
			"transformations": [
				{
					"name": "filtrado"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     ignoreNoFilesFound: false) ~> ventas",
				"derivedColumn1 select(mapColumn(",
				"          ID_VENTA = Column_1,",
				"          ID_PRODUCTO = Column_2,",
				"          VENTAS = Column_3",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> filtrado",
				"ventas derive(Unidades = Column_3+\"2\") ~> derivedColumn1",
				"filtrado sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> resultadoVentas"
			]
		}
	}
}